[global/wm]
margin-bottom = 5
margin-top = 5

[colors]
background = #2e3440
foreground = #e5e9f0
primary = #88c0d0
secondary = #81a1c1

[bar/main]
width = 100%
height = 27
radius = 0
background = ${colors.background}
foreground = ${colors.foreground}
line-size = 2
border-size = 2
border-color = #00000000
padding-left = 1
padding-right = 1
module-margin = 1
font-0 = Iosevka:size=10;2
font-1 = Noto Sans Symbols2:size=10;2

modules-left = herbstluftwm
modules-right = cpu memory filesystem temperature pulseaudio date
modules-center = text

tray-position = right

; The `modules` define what content is displayed on the bar.
; We'll define these modules below.

[module/herbstluftwm]
type = internal/herbstluftwm
format = <label-monitor>
format-background = ${colors.background}
label-monitor-background = ${colors.primary}
label-monitor-padding = 1
label-monitor = %monitor_index%

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = "CPU "
format-prefix-foreground = ${colors.primary}
label = %percentage%%
format = <label>

[module/memory]
type = internal/memory
interval = 2
format-prefix = "RAM "
format-prefix-foreground = ${colors.primary}
label = %percentage_used%%
format = <label>

[module/filesystem]
type = internal/filesystem
interval = 25
mount-point = /
format-prefix = "Disk "
format-prefix-foreground = ${colors.primary}
label-mounted = %used%
format-mounted = <label-mounted>
format-unmounted = <label-unmounted>

[module/temperature]
type = internal/temperature
interval = 1
thermal-zone = 0
format-prefix = "Temp "
format-prefix-foreground = ${colors.primary}
label = %temperature-c%
format = <label>
warn-temperature = 80
format-warn = <label-warn>
format-warn-prefix = "Temp "
format-warn-prefix-foreground = ${colors.secondary}

[module/pulseaudio]
type = internal/pulseaudio
format-volume = <label-volume> <bar-volume>
format-volume-prefix = "Vol "
format-volume-prefix-foreground = ${colors.primary}
label-volume = %percentage%%
format-muted-prefix = "Vol "
label-muted = muted
format-muted-foreground = ${colors.secondary}

[module/date]
type = internal/date
interval = 1
date = %Y-%m-%d
time = %I:%M:%S
format-prefix = "Date "
format-prefix-foreground = ${colors.primary}
label = %date% %time%

[module/text]
type = custom/text
label = ${env:HOSTNAME}
